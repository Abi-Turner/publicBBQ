<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Public Barbeques</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
  integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
  crossorigin=""/>
  <style> #map { height: 80vh; }</style>
</head>
<body>
  <h1>Find my BBQ</h1>
  <div id="map"></div>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
  integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
  crossorigin=""></script>
 <script>
  const locations = JSON.parse(`<%- locations %>`); // Parse JSON string back to array

  const map = L.map('map').setView([-37.81314, 144.97357], 13);
  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  const bbqIcon = L.icon({
    iconUrl: "images/bbq-60.png",
    iconSize: [35, 35], 
    iconAnchor: [16, 32], 
    popupAnchor: [0, -32]
  });

  locations.forEach(location => {
    let marker = L.marker([location.co_ordinates.lat, location.co_ordinates.lon], { icon: bbqIcon }).addTo(map);
    marker.bindPopup(location.address);
  });
      
 </script>

</body>
</html>
